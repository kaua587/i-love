# Inicializa√ß√£o do Pygame
pygame.init()

# Tamanho da tela
WIDTH, HEIGHT = 800, 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Cora√ß√£o desenhado üíñ")

# Cores
WHITE = (255, 255, 255)
RED = (255, 0, 0)

def draw_heart(surface, x, y, size):
    # Desenha o cora√ß√£o com base na posi√ß√£o (x, y) e tamanho
    radius = size // 2

    # Dois c√≠rculos no topo
    pygame.draw.circle(surface, RED, (x - radius // 2, y), radius)
    pygame.draw.circle(surface, RED, (x + radius // 2, y), radius)

    # Tri√¢ngulo para formar a parte de baixo
    points = [
        (x - size, y),               # canto esquerdo
        (x + size, y),               # canto direito
        (x, y + size * 1.5),         # ponto inferior
    ]
    pygame.draw.polygon(surface, RED, points)

# Loop principal
running = True
clock = pygame.time.Clock()

while running:
    screen.fill(WHITE)

    # Desenhar cora√ß√£o no centro
    draw_heart(screen, WIDTH // 2, HEIGHT // 2 - 50, 40)

    # Atualiza a tela
    pygame.display.flip()
    clock.tick(60)

    # Verifica eventos
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

pygame.quit()

